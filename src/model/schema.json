{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "설정파일 스키마",
	"type": "object",
	"definitions": {
		"ColumnDefinition": {
			"type": "object",
			"properties": {
				"title": { "type": "string" },
				"type": { "type": "string" },
				"property": {
					"type": "object",
					"properties": {
						"name": { "type": "string" },
						"type": { "type": "string" }
					}
				}
			},
			"required": ["type"]
		},
		"IndexDefinition": {
			"type": "object",
			"properties": {
				"name": { "type": "string" },
				"with": {
					"type": "array",
					"items": { "type": "string" },
					"minItems": 1
				},
				"unique": { "type": "boolean" }
			},
			"required": ["with"]
		}
	},
	"properties": {
		"name": { "type": "string" },
		"table": { "type": "string" },
		"title": { "type": "string" },
		"columns": {
			"type": "object",
			"patternProperties": {
				"^.*$": { "$ref": "#/definitions/ColumnDefinition" }
			},
			"minProperties": 1
		},
		"primaryKey": {
			"type": "array",
			"items": { "type": "string" },
			"minItems": 1
		},
		"indexes": {
			"type": "array",
			"items": { "$ref": "#/definitions/IndexDefinition" }
		},
		"imports": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "array",
					"items": { "type": "string" }
				}
			}
		}
	},
	"required": ["table", "columns"]
}
