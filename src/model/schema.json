{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "설정파일 스키마",
	"type": "object",
	"definitions": {
		"ColumnDefinition": {
			"type": "object",
			"properties": {
				"title": { "type": "string" },
				"type": { "type": "string" },
				"property": {
					"type": "object",
					"properties": {
						"name": { "type": "string" },
						"type": { "type": "string" },
						"converter": { "type": "string" }
					}
				}
			},
			"required": []
		},
		"IndexDefinition": {
			"type": "object",
			"properties": {
				"name": { "type": "string" },
				"with": {
					"type": "array",
					"items": { "type": "string" },
					"minItems": 1
				},
				"unique": { "type": "boolean" }
			},
			"required": ["with"]
		},
		"ReferentialOption": {
			"enum": ["CASCADE", "SET NULL", "RESTRICT", "NO ACTION", "SET DEFAULT"]
		},
		"ForeignKeyDefinition": {
			"type": "object",
			"properties": {
				"with": {
					"type": "array",
					"items": { "type": "string" },
					"minItems": 1
				},
				"references": {
					"type": "object",
					"properties": {
						"table": { "type": "string" },
						"columns": {
							"type": "array",
							"items": { "type": "string" },
							"minItems": 1
						},
						"onDelete": {
							"$ref": "#/definitions/ReferentialOption"
						},
						"onUpdate": {
							"$ref": "#/definitions/ReferentialOption"
						}
					},
					"required": ["with", "references"]
				}
			},
			"required": ["with"]
		}
	},
	"properties": {
		"name": { "type": "string" },
		"table": { "type": "string" },
		"title": { "type": "string" },
		"columns": {
			"type": "object",
			"patternProperties": {
				"^.*$": { "$ref": "#/definitions/ColumnDefinition" }
			},
			"minProperties": 1
		},
		"primaryKey": {
			"type": "array",
			"items": { "type": "string" },
			"minItems": 1
		},
		"indexes": {
			"type": "array",
			"items": { "$ref": "#/definitions/IndexDefinition" }
		},
		"foreignKeys": {
			"type": "array",
			"items": { "$ref": "#/definitions/ForeignKeyDefinition" }
		},
		"imports": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "array",
					"items": { "type": "string" }
				}
			}
		}
	},
	"required": ["table", "columns"]
}
